<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".list_schools">

    <Button
        android:id="@+id/btn_schl3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="@+id/btn_schl2"
        app:layout_constraintTop_toBottomOf="@+id/btn_schl2" />

    <Button
        android:id="@+id/btn_schl4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/btn_schl3"
        app:layout_constraintTop_toBottomOf="@+id/btn_schl3" />

    <Button
        android:id="@+id/btn_schl5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="@+id/btn_schl4"
        app:layout_constraintTop_toBottomOf="@+id/btn_schl4" />

    <Button
        android:id="@+id/btn_schl6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        app:layout_constraintStart_toStartOf="@+id/btn_schl5"
        app:layout_constraintTop_toBottomOf="@+id/btn_schl5" />

    <Button
        android:id="@+id/btn_schl7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="@+id/btn_schl6"
        app:layout_constraintTop_toBottomOf="@+id/btn_schl6" />

    <Button
        android:id="@+id/btn_schl8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_schl7"
        app:layout_constraintTop_toBottomOf="@+id/btn_schl7" />

    <Button
        android:id="@+id/Previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:onClick="previousPage"
        android:text="Previous"
        app:layout_constraintStart_toStartOf="@+id/btn_schl8"
        app:layout_constraintTop_toBottomOf="@+id/btn_schl8" />

    <Button
        android:id="@+id/btn_schl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_schl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/btn_schl1"
        app:layout_constraintTop_toBottomOf="@+id/btn_schl1" />
</androidx.constraintlayout.widget.ConstraintLayout>